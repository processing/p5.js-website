---
const pathname = Astro.url.pathname;

const splitPathname = pathname.split("/");
const topic = splitPathname[splitPathname.length-2];

const { title } = Astro.props;
---

<div class="px-lg pt-5xl lg:pt-3xl pb-0">
  <!-- if no title is passed, don't render the breadcrumbs or title area -->
  <!-- we still render the container for spacing -->
  {
    title ?
      <div class="[&>*]:pr-sm pb-xs">
        <a href=`/${topic}` class="capitalize">{topic}</a>
        <span>{">"}</span>
        <span>{title}</span>
      </div>
      <h1 class="whitespace-pre-line">{title}</h1>
      : null
  }
</div>
