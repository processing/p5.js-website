{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "./.astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "./dist",
    "./in",
    // "./.astro",
    "./src/content/examples/**/*.js",
    "src/scripts/parsers/in",
    "src/scripts/parsers/out"
  ],
  "compilerOptions": {
    "lib": ["es2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@scripts/*": ["src/scripts/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@tests/*": ["src/tests/*"],
      "@types/*": ["src/types/*"],
      "@i18n/*": ["src/i18n/*"],
      "@styles/*": ["./styles/*"],
    }
  }
}
